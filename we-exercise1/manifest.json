{
  "manifest_version": 2,
  "name": "WebExtensions Exercise 1",
  "version": "1.0",

  "description": "WebExtensions Exercise 1, exercise and demos.",
  "author": "Secure Sky Technology Inc.",
  "icons": {
    "16" : "icons/icon-16.png",
    "48" : "icons/icon-48.png",
    "96" : "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "browser_action": {
    "default_icon":  {
      "16": "browser_action/ba-icon-16.png",
      "20": "browser_action/ba-icon-20.png",
      "32": "browser_action/ba-icon-32.png",
      "40": "browser_action/ba-icon-40.png"
    },
    "default_title": "Hello!",
    "default_popup": "browser_action/popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
